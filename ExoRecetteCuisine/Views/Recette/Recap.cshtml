@model IEnumerable<Recette>

@{
    ViewData["Title"] = "Liste des recettes";
}



<table class="table table-hover">
    <thead>
        <tr>
            <td>Name</td>
            <td>Description</td>
        </tr>
    </thead>
    <tbody>
        @foreach (Recette recette in Model)
        {
            <tr>
                <td>@recette.Name</td>
                <td>@recette.Description</td>
                <td><a class="btn btn-primary" asp-controller="Recette" asp-action="Detail" asp-route-guid=@recette.guid >Detail</a> </td>
                <td><a class="btn btn-primary" asp-controller="Recette" asp-action="Modif" asp-route-guid=@recette.guid>Modifier</a> </td>
                <td><a class="btn btn-primary" asp-controller="Recette" asp-action="Supp" asp-route-guid=@recette.guid>Supprimer</a> </td>

            </tr>
        }
    </tbody>
</table>
<a class="btn btn-primary" asp-controller="Recette" asp-action="Add">Ajouter</a> 

